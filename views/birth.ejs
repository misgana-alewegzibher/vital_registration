  <label class="form-check-label" for="flexRadioDefault1"> MALE </label>
</div>

<!-- Default checked radio -->
<div class="form-check col-4 text-center">
  <input class="form-check-input" type="radio" name="birthgender" id="birthgender2" checked value="female"/>
  <label class="form-check-label" for="flexRadioDefault2"> FEMALE </label>
</div>



<div class="form-check m-1 col-4 text-center px-5">
  <input class="form-check-input" type="radio" name="citizengender" id="citizengender1" value="male"/>
